# =============================================
# Telegram Manager Configuration
# =============================================

# Telegram API Configuration
APP_ID=your_app_id_here
APP_HASH=your_app_hash_here

# Database and Sessions
DB_PATH=data/accounts.db
SESSION_COUNT=250
SESSIONS_DIR=sessions

# Operation Limits
MAX_CONCURRENT_OPERATIONS=5
MAX_CONCURRENT_SCRAPES=10
DAILY_MESSAGES_LIMIT=500
DAILY_GROUPS_LIMIT=15

# Monitoring Settings
MONITORING_COOLDOWN=1.0
MESSAGE_SCRAPING_DAYS=10

# =============================================
# Bot Panel Configuration  
# =============================================

# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Admin Telegram User IDs (comma-separated)
ADMIN_USERS=123456789,987654321

# UI Settings
PAGE_SIZE=5
MAX_GROUPS_PER_BULK=20

# Bot Operation Limits
BOT_MAX_CONCURRENT_SCRAPES=3
BOT_REQUEST_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
ERROR_LOG_FILE=logs/error.log
LOG_TO_CONSOLE=true
ENABLE_LOG_ROTATION=true
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=7

# Session Management
SESSION_TIMEOUT=3600
CLEANUP_INTERVAL=300

# Performance Configuration
CACHE_TTL=300
RATE_LIMIT_CALLS=30
PROGRESS_UPDATE_INTERVAL=2

# Operation Configuration
MAX_BULK_GROUPS=50
MAX_BULK_RECIPIENTS=10000
CHECKPOINT_INTERVAL=10
OPERATION_HISTORY_RETENTION=86400

# File Upload Limits (in bytes)
MAX_CSV_SIZE=20971520
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=52428800
MAX_DOCUMENT_SIZE=20971520
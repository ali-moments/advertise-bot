# =============================================
# Telegram Manager Configuration
# =============================================

# Telegram API Configuration
APP_ID=your_app_id_here
APP_HASH=your_app_hash_here

# Database and Sessions
DB_PATH=data/accounts.db
SESSION_COUNT=250
SESSIONS_DIR=sessions

# Operation Limits
MAX_CONCURRENT_OPERATIONS=5
MAX_CONCURRENT_SCRAPES=10
DAILY_MESSAGES_LIMIT=500
DAILY_GROUPS_LIMIT=15

# Monitoring Settings
MONITORING_COOLDOWN=2.0
MESSAGE_SCRAPING_DAYS=10

# =============================================
# Bot Panel Configuration  
# =============================================

# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Admin Telegram User IDs (comma-separated)
ADMIN_USERS=123456789,987654321

# UI Settings
PAGE_SIZE=5
MAX_GROUPS_PER_BULK=20

# Bot Operation Limits
BOT_MAX_CONCURRENT_SCRAPES=3
BOT_REQUEST_TIMEOUT=30